@model PI_MVC.Models.User

@{
    ViewBag.Title = "Gerir conta";
}

<div class="registerForm">
    <h2>@ViewBag.Title</h2>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm()) {
        <div>
            <fieldset>
                <legend>Informações da conta</legend>
                <div>
                    @Html.LabelFor(m => m.NickName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.NickName)
                    @Html.ValidationMessageFor(m => m.NickName)
                </div>
                <div>
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div>
                    @Html.LabelFor(m => m.Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                ADICIONAR FOTO!!
                @*<div>
                    @Html.LabelFor(m => m.Photo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Photo)
                    @Html.ValidationMessageFor(m => m.Photo)
                </div>*@

                <br />
                <p>
                    @Html.ActionLink("Alterar password", "ChangePassword", "Account")
                    <input type="submit" value="Confirmar alterações" style="float: right;" />
                </p>
            </fieldset>
            @Html.ValidationSummary(true, "Ocorreu um erro ao cria a conta. Por favor corrija os erros e tente novamente:")
        </div>
    }
</div>